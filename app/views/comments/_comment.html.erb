<%= comment.commenter%>:
<%= comment.body %>

<% if commenter(comment)%>
  <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_product_comment_path(comment.product, comment), class: "float-end text-black me-2"%>
  <%= link_to '<i class="fas fa-trash"></i>'.html_safe,[comment.product, comment],
            method: :delete,
            data: {confirm: "Are you sure?"}, class: "float-end text-black me-2"%>
<% end %>
<br/>
<p class="fst-italic float-end text-black me-2 text-muted"><%= time_ago_in_words(comment.created_at) %> ago.</p>
<br/><br/>
